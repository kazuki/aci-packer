{
  "name": "python",
  "labels": [
    { "name": "version", "value": "3.4" }
  ],
  "-aci-packer-build-steps-": [
    {
      "step": "symlink",
      "links": [
        ["lib", "/usr/lib64"],
        ["/bin/env", "/usr/bin/env"],
        ["python3.4", "/usr/bin/python3"],
        ["python3.4", "/usr/bin/python"]
      ]
    },
    {
      "step": "copy",
      "binaries": [
        "/usr/bin/python3.4",
        "/bin/env",
        "/bin/busybox"
      ],
      "find_executable": [
        "/usr/lib/python3.4/"
      ],
      "files": [
        ["/usr/lib/python3.4/", "/usr/lib/python3.4/"],
        ["/usr/include/python3.4/", "/usr/include/python3.4/"]
      ],
      "excludes": [
        "/usr/lib/python3.4/ctypes/test",
        "/usr/lib/python3.4/lib2to3/tests",
        "/usr/lib/python3.4/test",
        "/usr/lib/python3.4/unittest/test",
        "/usr/lib/python3.4/distutils/tests",
        "/usr/lib/python3.4/site-packages",
        "/usr/lib/python3.4/sqlite3/test"
      ]
    },
    {
      "step": "setup_chroot"
    },
    {
      "step": "cmd",
      "path": "/bin/busybox",
      "args": [
        "--install",
        "-s",
        "/bin"
      ]
    },
    {
      "step": "write",
      "path": "/etc/passwd",
      "contents": "root:x:0:0:root:/:/bin/sh\n"
    },
    {
      "step": "write",
      "path": "/etc/group",
      "contents": "root:x:0:root\n"
    },
    {
      "step": "shell",
      "cmd": "wget -O - https://raw.github.com/pypa/pip/master/contrib/get-pip.py | chroot $ROOTFS /usr/bin/python"
    },
    {
      "step": "delete",
      "files": [
        "/pip_build_root",
        "/.cache",
        "/root"
      ]
    }
  ]
}
